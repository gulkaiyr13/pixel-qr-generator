<Window x:Class="PixelQRGeneratorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pixel QR Generator" Height="500" Width="500">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Margin="0,0,0,10">
            <TextBox x:Name="InputText" Width="460" Margin="0,0,0,5" Text="https://example.com"/>
            
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock VerticalAlignment="Center" Text="Размер пикселя:" Margin="0,0,10,0"/>
                <Slider x:Name="PixelSlider" Minimum="2" Maximum="20" Width="150" Value="8" TickFrequency="2" IsSnapToTickEnabled="True"/>
                <TextBlock Text="{Binding ElementName=PixelSlider, Path=Value}" Margin="10,0,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Button Content="Сгенерировать QR" Width="150" Click="GenerateButton_Click"/>
                <Button Content="Сохранить как SVG" Width="150" Margin="10,0,0,0" Click="SaveSvgButton_Click"/>
            </StackPanel>
        </StackPanel>

        <ScrollViewer Grid.Row="1">
            <Canvas x:Name="MyCanvas" Background="White" />
        </ScrollViewer>
    </Grid>
</Window>